{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": "./src",
    "paths": {
      // "@/*": ["./src/*"],
      // "components/*": ["./src/components/*"],
      // "context/*": ["./src/context/*"],
      // "provider/*": ["./src/provider/*"],
      // "pages/*": ["./src/pages/*"],
      // "routes/*": ["./src/routes/*"],
      // "utils/*": ["./src/utils/*"],
      // "schema/*": ["./src/schema/*"],
      // "types/*": ["./src/types/*"]
    }
  },
  "include": ["src"],
}
